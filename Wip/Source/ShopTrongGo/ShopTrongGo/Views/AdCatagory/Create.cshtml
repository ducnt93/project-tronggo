@model ShopTrongGo.Models.DanhMuc

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm mới</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Danh mục</legend>
        <div class="editor">
            <div class="editor-label">Tên danh mục</div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.TenDanhMuc, new {@class="txt"})
                @Html.ValidationMessageFor(model => model.TenDanhMuc)
            </div>
        </div>
        <div class="editor">
            <div class="editor-label">Nhà cung cấp</div>
            <div class="editor-field">
                @Html.DropDownList("NhaCungCapID", (IEnumerable<SelectListItem>)ViewBag.PriorityID, new {@class="drl"})
                @Html.ValidationMessageFor(model => model.NhaCungCapID)
            </div>
        </div>
        <div class="editor">
            <p>
                <input type="submit" value="Thêm" style="float: right; height: 40px; width: 80px; background: #ff4500; color: white; border-radius: 5px;" />
            </p>
        </div>
    </fieldset>
}

<div>
    @Html.ActionLink("Danh sách các danh mục", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
