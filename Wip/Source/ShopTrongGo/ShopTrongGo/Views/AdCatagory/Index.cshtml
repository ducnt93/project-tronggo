@model IEnumerable<ShopTrongGo.Models.DanhMuc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh sách danh mục</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table>
    <tr style="background: #00008b; color: white; height: 30px;">
        <th>Tên danh mục</th>
        <th>Nhà cung cấp</th>
        <th>Ẩn</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenDanhMuc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NhaCungCap1.TenNcc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TrangThaiXoa) @Html.DisplayFor(modelItem => item.NgayXoa)
        </td>
        <td style="width: 15%">
            @Html.ActionLink("Sửa", "Edit", new { id=item.DanhMucID }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.DanhMucID }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.DanhMucID })
        </td>
    </tr>
}

</table>
