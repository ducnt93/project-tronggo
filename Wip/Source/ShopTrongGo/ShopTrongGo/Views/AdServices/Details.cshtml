@model ShopTrongGo.Models.DichVu

@{
    ViewBag.Title = "Xóa dịch vụ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thông tin chi tiết</h2>

<fieldset>
    <legend>Dịch vụ</legend>
    <div class="display">
        <div class="display-label">Ngày đăng</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.NgayDang)
        </div>
    </div>
    <div class="display">

        <div class="display-label">Người đăng</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.NguoiDang)
        </div>
    </div>
    <div class="display">
        <div class="display-label">Ẩn</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.TrangThaiXoa) @Html.DisplayFor(model => model.NgayXoa)
        </div>
    </div>
    <div class="display">
        <div class="display-label">Dịch vụ</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.TenDichVu)
        </div>
    </div>
    <div class="display">
        <div class="display-label">Sơ lược</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.MieuTaNgan)
        </div>
    </div>
    <div class="display">
        <div class="display-label">Chi tiết</div>
        <div class="display-field">
            @Html.Raw(Model.MieuTaChiTiet)
        </div>
    </div>
    <div class="display">
        <div class="display-label">Ảnh đại diện</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.AnhDaiDien)
        </div>
    </div>
</fieldset>
<p>
    @Html.ActionLink("Sửa", "Edit", new { id=Model.DichVuID }) |
    @Html.ActionLink("Danh sách dịch vụ", "Index")
</p>
