@model ShopTrongGo.Models.DichVu

@{
    ViewBag.Title = "Sửa thông tin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Sửa thông tin</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Dịch vụ</legend>

        @Html.HiddenFor(model => model.DichVuID)
        <div class="editor">
            <div class="editor-label">Ngày đăng:</div>
            <div class="editor-field">
                @Html.EditorFor(model => model.NgayDang)
                @Html.ValidationMessageFor(model => model.NgayDang, "Không được bỏ trống")
            </div>
        </div>
        <div class="editor">
            <div class="editor-label">Người đăng:</div>
            <div class="editor-field">
                @Html.EditorFor(model => model.NguoiDang)
                @Html.ValidationMessageFor(model => model.NguoiDang, "Người đăng tin không nên bỏ trống")
            </div>
        </div>
        <div class="editor">
            <div class="editor-label">Ẩn</div>
            <div class="editor-field">
                @Html.EditorFor(model => model.TrangThaiXoa)
                @Html.ValidationMessageFor(model => model.TrangThaiXoa)
            </div>
        </div>
        <div class="editor">
            <div class="editor-label">Tên dịch vụ:</div>
            <div class="editor-field">
                @Html.EditorFor(model => model.TenDichVu)
                @Html.ValidationMessageFor(model => model.TenDichVu,"Tên dịch vụ không được để trống")
            </div>
        </div>
        <div class="editor">
            <div class="editor-label">Sơ lược</div>
            <div class="editor-field">
                @Html.TextAreaFor(model => model.MieuTaNgan)
                @Html.ValidationMessageFor(model => model.MieuTaNgan)
            </div>
        </div>
        <div class="editor">
            <div class="editor-label">Chi tiết</div>
            <div class="editor-field">
                @Html.TextAreaFor(model => model.MieuTaChiTiet, new { @id = "ckeContent" })
                @Html.ValidationMessageFor(model => model.MieuTaChiTiet)
            </div>
        </div>
        <div class="editor">
            <div class="editor-label">
                Ảnh đại diện:
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.AnhDaiDien)
                @Html.ValidationMessageFor(model => model.AnhDaiDien)
            </div>
        </div>
        <div class="editor">
            <div class="editor-label"></div>
            <div class="editor-field">
                <input type="button" id="btnBrowserImage" value="Browser" />
            </div>
        </div>
        <div class="editor">
            <p>
                <input type="submit" value="Lưu lại" style="float: right; height: 40px; width: 80px; background: #ff4500; color: white; border-radius: 5px;" />
            </p>
        </div>
      
</fieldset>
}

<div>
    @Html.ActionLink("Quay lại danh sách", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
