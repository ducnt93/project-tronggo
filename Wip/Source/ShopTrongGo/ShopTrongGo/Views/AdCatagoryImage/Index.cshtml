@model IEnumerable<ShopTrongGo.Models.DanhMucAnh>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh sách ảnh</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table>
    <tr style="background: #00008b; color: white; height: 30px;">
        <th>Tên sản phẩm</th>
        <th>Tên ảnh</th>
        <th>Ẩn</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SanPham.TenSp)
        </td>
        <td>
            <img style="height: 50px; width: 60px;" src="/image/cache/data/@Html.DisplayFor(modelItem => item.TenAnh)" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TrangThaiXoa)
        </td>
        <td style="width: 15%;">
            @Html.ActionLink("Sửa", "Edit", new { id=item.DanhMucAnhID }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.DanhMucAnhID }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.DanhMucAnhID })
        </td>
    </tr>
}

</table>
