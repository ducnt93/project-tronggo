@model ShopTrongGo.Models.ThongTinCongTy

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Xóa thông tin</h2>

<h3>Bạn thực sự muốn xóa nó?</h3>
<fieldset>
    <legend>Thông tin công ty</legend>
    <div class="display">
        <div class="display-label">Mã công ty</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.CongTyID)
        </div>
    </div>
    <div class="display">
        <div class="display-label">Tên công ty</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.TenCongTy)
        </div>
    </div>
    <div class="display">
        <div class="display-label">ĐỊa chỉ</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.DiaChi)
        </div>
    </div>
    <div class="display">
        <div class="display-label">Phone</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Phone)
        </div>
    </div>
    <div class="display">
        <div class="display-label">Email</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Email)
        </div>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="display">
            <p><input type="submit" value="Xóa" style="float: right; height: 40px; width: 80px; background: #ff4500; color: white; border-radius: 5px;" /></p>
        </div>
    }
</fieldset>
@Html.ActionLink("Danh sách các công ty", "Index")

