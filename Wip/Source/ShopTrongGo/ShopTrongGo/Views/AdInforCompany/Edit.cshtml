@model ShopTrongGo.Models.ThongTinCongTy

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Sửa thông tin</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <h2>Sửa thông tin</h2>
    <fieldset>
        <legend>Thông tin công ty</legend>
        
        <div class="editor">
            <div class="editor-label">Mã công ty
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.CongTyID)
                @Html.ValidationMessageFor(model => model.CongTyID)
            </div>
        </div>
        <div class="editor">
            <div class="editor-label">Tên công ty
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.TenCongTy)
                @Html.ValidationMessageFor(model => model.TenCongTy)
            </div>
        </div>
        <div class="editor">
            <div class="editor-label">Địa chỉ
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.DiaChi)
                @Html.ValidationMessageFor(model => model.DiaChi)
            </div>
        </div>
        <div class="editor">
            <div class="editor-label">Phone
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Phone)
                @Html.ValidationMessageFor(model => model.Phone)
            </div>
        </div>
        <div class="editor">
            <div class="editor-label">Email
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>
        <div class="editor">
                <p><input type="submit" value="Lưu lại" style="float: right; height: 40px; width: 80px; background: #ff4500; color: white; border-radius: 5px;" /></p>
            </div>
</fieldset>
}

<div>
    @Html.ActionLink("Danh sách công ty", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
