@model ShopTrongGo.Models.DoiTac

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Sửa thông tin</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Đối tác</legend>

        @Html.HiddenFor(model => model.DoiTacID)
  

        <div class="editor">
            <div class="editor-label">Tên đối tác
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.TenDoiTac)
                @Html.ValidationMessageFor(model => model.TenDoiTac)
            </div>
        </div>

        <div class="editor">
            <div class="editor-label">Nội dung
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.NoiDung)
                @Html.ValidationMessageFor(model => model.NoiDung)
            </div>
        </div>

        <div class="editor">
            <div class="editor-label">Sơ lược
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.MieuTaNgan)
                @Html.ValidationMessageFor(model => model.MieuTaNgan)
            </div>
        </div>

        <div class="editor">
            <div class="editor-label">Người đăng
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.NguoiDang)
                @Html.ValidationMessageFor(model => model.NguoiDang)
            </div>
        </div>

        <div class="editor">
            <div class="editor-label">Ẩn
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.TrangThaiXoa)
                @Html.ValidationMessageFor(model => model.TrangThaiXoa)
            </div>
        </div>

        <div class="editor">
            <p>
                <input type="submit" value="Lưu lại" style="float: right; height: 40px; width: 80px; background: #ff4500; color: white; border-radius: 5px;" />
            </p>
        </div>
</fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
