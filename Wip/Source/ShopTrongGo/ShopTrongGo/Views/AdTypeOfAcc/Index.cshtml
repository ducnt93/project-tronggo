@using PagedList.Mvc
@model PagedList.IPagedList<ShopTrongGo.Models.LoaiTaiKhoan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Tên loại
        </th>
        <th>
            Trạng thái xóa
        </th>
        <th>
            Ngày xóa
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenLoai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TrangThaiXoa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgayXoa)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.LoaiTaiKhoanID }) |
            @Html.ActionLink("Details", "Details", new { id=item.LoaiTaiKhoanID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.LoaiTaiKhoanID })
        </td>
    </tr>
}

</table>
@Html.PagedListPager(Model,trang => Url.Action("Index",new{trang = trang}),PagedListRenderOptions.OnlyShowFivePagesAtATime)