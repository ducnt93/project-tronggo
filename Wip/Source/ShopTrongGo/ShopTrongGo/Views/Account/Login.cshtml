@using System.Web.UI.WebControls
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="top">
    <div class="left"></div>
    <div class="center">
        <h1>Đăng nhập</h1>
    </div>
</div>
<div class="middle" style="padding:0px;">
    <div class="list">
        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            <table>
                <tr>
                    <td colspan="2">
                        @ViewBag.CheckLogin
                    </td>
                </tr>
                <tr>
                    <td>Tên đăng nhập:</td>
                    <td>@Html.TextBox("txtUserName")</td>
                </tr>
                <tr>
                    <td>Mật khẩu:</td>
                    <td>@Html.Password("txtPass")</td>
                </tr>
                <tr>
                    <td colspan="2">
                        <a href="~/Account/ForgotPass">Quên mật khẩu?</a>
                    </td>
                </tr>
                <tr>
                    <td><input type="submit" id="btnDangNhap" name="btnDangNhap" class="dangnhap" value="Đăng nhập" /></td>
                    <td><input type="button" id="btnHuy" name="btnHuy" value="Hủy bỏ" onclick="return ('~/Home/Index')"/></td>
                </tr>
            </table>
        }
    </div>
</div>