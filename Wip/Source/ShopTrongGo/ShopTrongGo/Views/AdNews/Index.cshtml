@model IEnumerable<ShopTrongGo.Models.TinTuc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>Danh mục tin</th>
        <th>TIn bài</th>
        <th>Miêu tả ngắn</th>
        <th>Trạng thái</th>
        <th>Ngày cập nhật</th>
        <th>Người đăng bài</th>
        <th>Ảnh đại diện</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DanhMucTin.TenDMTin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenTin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MieuTaNgan)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TrangThai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgayCapNhat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NguoiDang)
        </td>
        <td>
            <img src ="/image/cache/data/" @Html.DisplayFor(modelItem => item.AnhDaiDien) />
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
