@model ShopTrongGo.Models.TaiKhoan

@{
    ViewBag.Title = "Thay đổi mật khẩu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>TaiKhoan</legend>

        <div class="editor-label">Loại tài khoản</div>
        <div class="editor-field">
            @Html.DropDownList("LoaiTaiKhoanID", (IEnumerable<SelectListItem>)ViewBag.PriorityID, new { @class = "drl" })
            @Html.ValidationMessageFor(model => model.LoaiTaiKhoanID)
        </div>

        <div class="editor-label">Tên người dùng</div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TenNguoiDung, new { @class = "txt" })
            @Html.ValidationMessageFor(model => model.TenNguoiDung)
        </div>

        <div class="editor-label">Email</div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Email, new { @class = "txt" })
            @Html.ValidationMessageFor(model => model.Email)
        </div>

        <div class="editor-label">Tên đăng nhập</div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TenDangNhap, new { @class = "txt" })
            @Html.ValidationMessageFor(model => model.TenDangNhap)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MatKhau)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MatKhau)
            @Html.ValidationMessageFor(model => model.MatKhau)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Phone)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Phone)
            @Html.ValidationMessageFor(model => model.Phone)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DiaChi)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DiaChi)
            @Html.ValidationMessageFor(model => model.DiaChi)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TrangThaiXoa)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TrangThaiXoa)
            @Html.ValidationMessageFor(model => model.TrangThaiXoa)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NgayXoa)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NgayXoa)
            @Html.ValidationMessageFor(model => model.NgayXoa)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.NgayXoa)
        </div>
        <div class="editor-field">
            <p>
                <input type="submit" value="Save" />
            </p>
        </div>
</fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index","AdminLogin")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


