@using System.Web.Mvc.Html
@model ShopTrongGo.Models.TaiKhoan

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm mới</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Nhập thông tin tài khoản</legend>
        <div class="editor">
            <div class="editor-label">Loại tài khoản</div>
            <div class="editor-field">
                @Html.DropDownList("LoaiTaiKhoanID", (IEnumerable<SelectListItem>)ViewBag.PriorityID, new { @class = "drl" })
                @Html.ValidationMessageFor(model => model.LoaiTaiKhoanID)
            </div>
        </div>

        <div class="editor">
            <div class="editor-label">Tên người dùng</div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.TenNguoiDung, new { @class = "txt" })
                @Html.ValidationMessageFor(model => model.TenNguoiDung)
            </div>
        </div>

        <div class="editor">
            <div class="editor-label">Email</div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Email, new { @class = "txt" })
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>

        <div class="editor">
            <div class="editor-label">Tên đăng nhập</div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.TenDangNhap, new { @class = "txt" })
                @Html.ValidationMessageFor(model => model.TenDangNhap)
            </div>
        </div>

        <div class="editor">
            <div class="editor-label">Mật khẩu</div>
            <div class="editor-field">
                @Html.PasswordFor(model => model.MatKhau, new { @class = "txt" })
                @Html.ValidationMessageFor(model => model.MatKhau)
            </div>
        </div>

        <div class="editor">
            <div class="editor-label">Nhập lại mật khẩu</div>
            <div class="editor-field">
                <input type="password" class="txt" id="XacNhanMatKhau" />
                @Html.ValidationSummary(false,"Xác nhận lại mật khẩu")
            </div>
        </div>

        <div class="editor">
            <div class="editor-label">
                Phone
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Phone, new { @class = "txt" })
                @Html.ValidationMessageFor(model => model.Phone)
            </div>
        </div>

        <div class="editor">
            <div class="editor-label">Địa chỉ</div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.DiaChi, new { @class = "txt" })
                @Html.ValidationMessageFor(model => model.DiaChi)
            </div>
        </div>

        <div class="editor">
            <p><input type="submit" value="Thêm" style="float: right; height: 40px; width: 80px; background: #ff4500; color: white; border-radius: 5px;" /></p>
        </div>
    </fieldset>
}

<div>
    @Html.ActionLink("Danh sách tài khoản", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
