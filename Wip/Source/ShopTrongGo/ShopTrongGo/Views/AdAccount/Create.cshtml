@model ShopTrongGo.Models.TaiKhoan

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Nhập thông tin tài khoản</legend>
        <div class="editor">
            <div class="editor-label">Loại tài khoản</div>
            <div class="editor-field">
                @Html.DropDownList("LoaiTaiKhoanID", String.Empty)
                @Html.ValidationMessageFor(model => model.LoaiTaiKhoanID)
            </div>
        </div>

        <div class="editor">
            <div class="editor-label">Tên người dùng</div>
            <div class="editor-field">
                @Html.EditorFor(model => model.TenNguoiDung)
                @Html.ValidationMessageFor(model => model.TenNguoiDung)
            </div>
        </div>

        <div class="editor">
            <div class="editor-label">Email</div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>

        <div class="editor">
            <div class="editor-label">Tên đăng nhập</div>
            <div class="editor-field">
                @Html.EditorFor(model => model.TenDangNhap)
                @Html.ValidationMessageFor(model => model.TenDangNhap)
            </div>
        </div>

        <div class="editor">
            <div class="editor-label">Mật khẩu</div>
            <div class="editor-field">
                @Html.EditorFor(model => model.MatKhau)
                @Html.ValidationMessageFor(model => model.MatKhau)
            </div>
        </div>

        <div class="editor">
            <div class="editor-label">Nhập lại mật khẩu</div>
            <div class="editor-field">
                @Html.EditorFor(model => model.MatKhau)
                @Html.ValidationMessageFor(model => model.MatKhau)
            </div>
        </div>

        <div class="editor">
            <div class="editor-label">
                Phone
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Phone)
                @Html.ValidationMessageFor(model => model.Phone)
            </div>
        </div>

        <div class="editor">
            <div class="editor-label">Địa chỉ</div>
            <div class="editor-field">
                @Html.EditorFor(model => model.DiaChi)
                @Html.ValidationMessageFor(model => model.DiaChi)
            </div>
        </div>

        <div class="editor">
            <p><input type="submit" value="Create" style="float: right; height: 40px; width: 80px; background: #ff4500; color: white; border-radius: 5px;" /></p>
        </div>
    </fieldset>
}

<div>
    @Html.ActionLink("Danh sách tài khoản", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
