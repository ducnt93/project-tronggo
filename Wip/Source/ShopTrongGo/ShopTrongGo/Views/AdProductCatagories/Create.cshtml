@model ShopTrongGo.Models.LoaiSanPham

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm mới loại sản phẩm</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend style="text-align: center;">Loại sản phẩm</legend>
        <div class="editor">
            <div class="editor-label">Tên loại sản phẩm</div>
            <div class="editor-field">
                @Html.EditorFor(model => model.TenLoaiSp, new { @class = "txt" })
                @Html.ValidationMessageFor(model => model.TenLoaiSp)
            </div>
        </div>
        <div class="editor">
            <div class="editor-label">Danh mục</div>
            <div class="editor-field">
                @Html.DropDownList("DanhMucID", (IEnumerable<SelectListItem>)ViewBag.PriorityID, new { @class = "drl" })
                @Html.ValidationMessageFor(model => model.DanhMucID)
            </div>
        </div>
        <div class="editor">
            <p>
                <input type="submit" value="Thêm" style="float: right; height: 40px; width: 80px; background: #ff4500; color: white; border-radius: 5px;" />
            </p>
        </div>
</fieldset>
}

<div>
    @Html.ActionLink("Back", "ListProductCatagories")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
