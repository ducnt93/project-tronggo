@model ShopTrongGo.Models.LoaiSanPham

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Sửa thông tin</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Loại sản phẩm</legend>

        <div class="editor">
            <div class="editor-label">Mã</div>
            <div class="editor-field">
                @Html.EditorFor(model => model.LoaiSpID)
                @Html.ValidationMessageFor(model => model.LoaiSpID)
            </div>
        </div>
        <div class="editor">
            <div class="editor-label">Tên loại sản phẩm
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.TenLoaiSp)
                @Html.ValidationMessageFor(model => model.TenLoaiSp)
            </div>
        </div>
        <div class="editor">
            <div class="editor-label">Ẩn
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.TrangThaiXoa)
                @Html.ValidationMessageFor(model => model.TrangThaiXoa)
            </div>
        </div>
        <div class="editor">
            <div class="editor-label">Danh mục
            </div>
            <div class="editor-field">
                @Html.DropDownList("DanhMucID", String.Empty)
                @Html.ValidationMessageFor(model => model.DanhMucID)
            </div>
        </div>

        <div class="editor">
            <p>
                <input type="submit" value="Lưu lại" style="float: right; height: 40px; width: 80px; background: #ff4500; color: white; border-radius: 5px;" />
            </p>
        </div>
</fieldset>
}

<div>
    @Html.ActionLink("Danh sách các loại sản phẩm", "ListProductCatagories")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
