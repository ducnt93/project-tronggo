@using PagedList.Mvc
@model PagedList.IPagedList<ShopTrongGo.Models.TinTuc>
@{
    ViewBag.Title = "Tin tức";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="top">
    <div class="left"></div>
    <div class="center">
        <h1>Tin Tức</h1>
    </div>
</div>
@if (Model != null)
{
        <div class="middle" style="padding:0px;">
            <div class="list">
                @foreach (var tinTuc in Model)
                {
                    <div class="itemTinTuc">
                        <a href="~/News/DetailNews/@tinTuc.Id"><img class="imgTT" style="max-height: 80px; max-width: 90px;" src="~/image/cache/data/@tinTuc.AnhDaiDien" /></a>
                        <p><a href="~/News/DetailNews/@tinTuc.Id"></a>@tinTuc.TenTin</p>
                        <p>Ngày đăng:@tinTuc.NgayCapNhat</p>
                        <p>@Html.Raw(tinTuc.MieuTaNgan)</p>
                        <p>@tinTuc.NguoiDang</p>
                        <p><a href="~/News/DetailNews/@tinTuc.Id">Chi tiết</a></p>
                    </div>
                }
                @Html.PagedListPager(Model, page => Url.Action("AllNews", new { page = page }), PagedListRenderOptions.ClassicPlusFirstAndLast)
            </div>
        </div>
}

