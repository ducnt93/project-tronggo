@using PagedList.Mvc
@model PagedList.IPagedList<ShopTrongGo.Models.DichVu>
@{
    ViewBag.Title = "Dịch vụ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="top">
    <div class="left"></div>
    <div class="center">
        <h1>Dịch Vụ</h1>
    </div>
</div>
@if (Model != null)
{
    <div class="middle" style="padding: 0px;">
        <div class="list">
            @foreach (var dichVu in Model)
            {
                <div style="float:left; width: 100%">
                    <div class="TieuDe">
                        <a href="~/danh-vu/@dichVu.DichVuID/@dichVu.TenKhongDau">@dichVu.TenDichVu </a><br />
                    </div>
                    <div class="LeftNew">
                        <a href="~/danh-vu/@dichVu.DichVuID/@dichVu.TenKhongDau"><img class="imgTT" src="~/image/cache/data/@dichVu.AnhDaiDien" /></a>
                    </div>
                    <div class="RightNew">
                        <br />
                        <p style="color: #a9a9a9;"> Ngày đăng: @dichVu.NgayDang.ToString("d")</p>
                        <p>@Html.Raw(dichVu.MieuTaNgan) <a href="~/danh-vu/@dichVu.DichVuID/@dichVu.TenKhongDau" style="font-size: 13px;">...Chi tiết</a></p>
                    </div>
                </div>
            }
            @Html.PagedListPager(Model, trang => Url.Action("AllServices", new { trang  = trang }), PagedListRenderOptions.OnlyShowFivePagesAtATime)
        </div>
    </div>
}

