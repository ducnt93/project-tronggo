@using ShopTrongGo.Models;
@model ShopTrongGo.Models.DichVu
@{
    ViewBag.Title = @Model.TenDichVu;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model != null)
{
    <div class="top">
        <div class="left"></div>
        <div class="center">
            <h1>@Model.TenDichVu</h1>
        </div>
    </div>

    <div class="middle" style="padding:0px;">
        <div class="list">
            <div class="DichVu">
                <p>Ngày cập nhật: @Model.NgayDang</p>
                <p>@Html.Raw(Model.MieuTaChiTiet)</p>
            </div>
        </div>
    </div>
}
@{
    var list = (List<DichVu>)ViewBag.DanhSachDichVu;
    if (list != null)
    {
        <hr />
        <p>Các dịch vụ khác:</p>
        <div class="middle" style="padding:0px;">
            <div class="list">
                @foreach (var dsDv in list)
                {
                    <div class="DanhsachDV">
                        <a href="~/News/DetailServices/@dsDv.DichVuID">@dsDv.TenDichVu</a>
                    </div>
                }
            </div>
        </div>
    }
}

