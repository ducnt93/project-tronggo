@model IEnumerable<ShopTrongGo.Models.HoaDon>

@{
    ViewBag.Title = "Danh sách đặt hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Đặt hàng</h2>

<table>
    <tr>
        <th>Ngày mua</th>
        <th>Tên người mua</th>
        <th>Ẩn</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NgayMua)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TaiKhoan.TenNguoiDung)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TrangThaiXoa)
        </td>
        <td>
            @Html.ActionLink("Chi tiết", "Details", new { id=item.HoaDonID }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.HoaDonID })
        </td>
    </tr>
}

</table>
