@model ShopTrongGo.Models.HoaDon

@{
    ViewBag.Title = "Chi tiết đặt hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Chi tiết</h2>

<fieldset>
    <legend>Hóa đơn</legend>
    <div class="display">
        <div class="display-label">Ngày mua</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.NgayMua)
        </div>
    </div>

    <div class="display">
        <div class="display-label">Tên người mua</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.TaiKhoan.TenNguoiDung)
        </div>
    </div>

    <div class="display">
        <div class="display-label">Ẩn</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.TrangThaiXoa) @Html.DisplayFor(model => model.NgayXoa)
        </div>
    </div>

</fieldset>
<p>
    @Html.ActionLink("Danh sách hóa đơn", "Index")
</p>
