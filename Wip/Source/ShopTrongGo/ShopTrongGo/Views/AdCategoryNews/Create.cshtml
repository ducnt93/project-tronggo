@model ShopTrongGo.Models.DanhMucTin

@{
    ViewBag.Title = "Tạo mới danh mục";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm mới danh mục tin</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Danh mục tin</legend>
        <div class="editor">
            <div class="editor-label">
                Tên danh mục:
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.TenDMTin, new {@class = "txt"})
                @Html.ValidationMessageFor(model => model.TenDMTin)
            </div>
        </div>
        <div class="editor">
            <div class="editor-label">
                Mô tả:
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(model => model.MoTa)
                @Html.ValidationMessageFor(model => model.MoTa)
            </div>
        </div>
        <div class="editor">
            <div class="editor-label">Ẩn
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.TrangThai)
                @Html.ValidationMessageFor(model => model.TrangThai)
            </div>
        </div>
        <div class="editor">
            <p><input type="submit" value="Thêm" style="float: right; height: 40px; width: 80px; background: #ff4500; color: white; border-radius: 5px;" /></p>
        </div>
</fieldset>
}

<div>
    @Html.ActionLink("Quay lại danh sách", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
