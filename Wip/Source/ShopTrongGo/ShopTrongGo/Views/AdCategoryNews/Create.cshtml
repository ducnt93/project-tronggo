@model ShopTrongGo.Models.DanhMucTin

@{
    ViewBag.Title = "Tạo mới danh mục";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>DanhMucTin</legend>

        <div class="editor-label">
            Tên danh mục:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TenDMTin)
            @Html.ValidationMessageFor(model => model.TenDMTin,"Không được bỏ trống")
        </div>

        <div class="editor-label">
            Mô tả:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MoTa)
            @Html.ValidationMessageFor(model => model.MoTa)
        </div>

        <div class="editor-label">
            Trạng thái:
            <br/>(Tích chọn thì danh mục sẽ được hiện lên)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TrangThai)
            @Html.ValidationMessageFor(model => model.TrangThai)
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Quay lại danh sách", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
